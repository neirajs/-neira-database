{
	"$schema": "http://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"declarationDir": "build",
		"outDir": "build",
		"declaration": true,
		"sourceMap": true,
		"declarationMap": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"types": [
			"mocha"
		],
		"lib": [
			"esnext",
			"DOM"
		]
	},
	"include": [
		"src/**/*.ts"
	]
}
